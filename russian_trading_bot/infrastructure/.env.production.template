# Russian Trading Bot Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=russian_trading
DB_USER=trading_user

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Security Configuration
BACKUP_ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
API_SECRET_KEY=your_api_secret_key_here

# MOEX API Configuration
MOEX_API_KEY=your_moex_api_key_here
MOEX_API_URL=https://iss.moex.com/iss
MOEX_RATE_LIMIT=10

# Russian Broker API Configuration
TINKOFF_API_TOKEN=your_tinkoff_invest_token_here
TINKOFF_API_URL=https://invest-public-api.tinkoff.ru/rest
FINAM_API_KEY=your_finam_api_key_here
FINAM_API_URL=https://trade-api.finam.ru

# News Sources Configuration
RBC_RSS_URL=https://www.rbc.ru/v10/ajax/get-news-feed/project/rbcnews.rbc.ru/lastDate/
VEDOMOSTI_RSS_URL=https://www.vedomosti.ru/rss/news
KOMMERSANT_RSS_URL=https://www.kommersant.ru/RSS/news.xml
INTERFAX_API_KEY=your_interfax_api_key_here

# Notification Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here

# Russian Market Configuration
MARKET_TIMEZONE=Europe/Moscow
MARKET_CURRENCY=RUB
MARKET_LOCALE=ru_RU.UTF-8
TRADING_HOURS_START=10:00
TRADING_HOURS_END=18:45

# Risk Management Configuration
MAX_POSITION_SIZE=0.05
MAX_DAILY_LOSS=0.02
STOP_LOSS_PERCENTAGE=0.03
TAKE_PROFIT_PERCENTAGE=0.06
MAX_PORTFOLIO_RISK=0.10

# AI Configuration
SENTIMENT_MODEL_PATH=/app/models/russian_sentiment_model.pkl
NLP_MODEL_PATH=/app/models/russian_nlp_model
DECISION_ENGINE_CONFIDENCE_THRESHOLD=0.7

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=90

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10

# Compliance Configuration
DATA_RESIDENCY=Russia
AUDIT_LOG_RETENTION_YEARS=5
REGULATORY_REPORTING=enabled
TAX_REPORTING_ENABLED=true

# Development/Testing Configuration (set to false in production)
DEBUG_MODE=false
PAPER_TRADING_MODE=false
MOCK_BROKER_API=false
ENABLE_TEST_ENDPOINTS=false

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_ENABLED=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_REMOTE_STORAGE=false

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ELASTICSEARCH_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Russian Compliance Configuration
RUSSIAN_DATA_PROTECTION=enabled
PERSONAL_DATA_PROCESSING_CONSENT=required
FINANCIAL_MONITORING_COMPLIANCE=enabled
CENTRAL_BANK_REPORTING=enabled